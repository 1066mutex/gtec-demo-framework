          <Switch Text="Jumping" AlignmentX="Stretch" Checked="true"/>
          <Switch Text="Wizard" AlignmentX="Stretch"/>
        </UniformStackLayout>
        <Divider/>
        <FloatingButton theme_Type="Back"/>
      </StackLayout>
    </BackgroundWindow>

