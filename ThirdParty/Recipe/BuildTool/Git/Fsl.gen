<?xml version="1.0" encoding="UTF-8"?>
<FslBuildGen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../FslBuildGen.xsd">
  <ToolRecipe Name="Recipe.BuildTool.Git">
    <Default.Platform.Supported Value="false"/>

    <Platform Name="Ubuntu" Supported="true">
      <ExperimentalRecipe>
        <Installation>
          <FindFileInPath Name="git" Help="Please install git (https://git-scm.com/download/win) as its needed to acquire source that needs to be build."/>
        </Installation>
      </ExperimentalRecipe>
    </Platform>
    <Platform Name="Windows" Supported="true">
      <ExperimentalRecipe>
        <Installation>
          <FindFileInPath Name="git.exe" Help="Please install git (https://git-scm.com/download/win) as its needed to acquire source that needs to be build."/>
        </Installation>
      </ExperimentalRecipe>
    </Platform>
  </ToolRecipe>
</FslBuildGen>
