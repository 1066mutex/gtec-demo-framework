#!/usr/bin/env groovy
pipeline
{
    agent
    {
        docker
        {
            label 'ubuntu'
            registryUrl "$DOCKER_PRIVATE_REGISTRY"
            registryCredentialsId 'private-docker-hub-cred'
            image 'work-internal/graphics-compute-api-test:4.9.x-1.0.0-GCC6.2'
        }
    }
    options
    {
      buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    triggers
    {
        cron('H 4 * * *')
    }
    stages
    {
        stage('Build')
        {
            steps
            {
                sh '.Config/Jenkins/yocto/Review_DF_4_9_x-1_0_0-GCC6_2-FB.sh'
                warnings canComputeNew: false, canResolveRelativePaths: false, categoriesPattern: '', consoleParsers: [[parserName: 'GNU Make + GNU C Compiler (gcc)']], defaultEncoding: '', excludePattern: '', healthy: '', includePattern: '', messagesPattern: '', unHealthy: ''
            }
        }
        stage('Test')
        {
            steps
            {
                echo 'make check'
            }
        }
        stage('Deploy')
        {
            steps
            {
                echo 'make publish'
            }
        }
    }
}